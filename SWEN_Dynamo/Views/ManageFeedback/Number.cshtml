
@{
    ViewBag.Title = "Number";
}
<div class="jumbotron">
    <h2>Boys/Girls Count Infographics</h2>
</div>
    <p id="JsonFile">@Model.Ex</p>


    <html>
    <head>
        <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
        <script type="text/javascript">


            var ConvertJson = document.getElementById("JsonFile").innerHTML;
            var newStr = ConvertJson.substring(1, ConvertJson.length - 1);
            var ConvertedJsonObject = JSON.parse(newStr);
            var ck = Object.keys(ConvertedJsonObject);

            google.charts.load("current", { packages: ["corechart"] });
            google.charts.setOnLoadCallback(drawChart);
            function drawChart() {
                var data = google.visualization.arrayToDataTable([
                  ['Gender', 'Number'],
                  ['Number of Boys in Event', ConvertedJsonObject['Q1']],
                  ['Number of Girls in Event', ConvertedJsonObject['Q2']],

                ]);

                var options = {
                    title: 'Boys and Girls Infographics',
                    is3D: true,
                };

                var chart = new google.visualization.PieChart(document.getElementById('piechart_3d'));
                chart.draw(data, options);
            }
        </script>
    </head>
    <body>
        <div id="piechart_3d" style="width: 900px; height: 500px;"></div>
    </body>
</html>

